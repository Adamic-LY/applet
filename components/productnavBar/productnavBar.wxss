/* components/productnavBar/productnavBar.wxss */
.producttabBox {
  width: 100vw;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.productnavbar {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  float: left;
  overflow-y: hidden;
  overflow-x: auto;
  white-space: nowrap;
  /* padding: 0 15rpx; */
}

.navbar-item {
  padding: 0 40rpx;
  font-size: 24rpx;
  text-align: center;
  position: relative;
  display: inline-block;
}

.navbar-item-on {
  padding: 0 40rpx;
  font-size: 24rpx;
  text-align: center;
  position: relative;
  display: inline-block;
  font-weight: bold;
  color: #333333;
}

.productxiahuaxian {
  width: 25rpx;
  margin: 0 auto;
  border-bottom: 4rpx solid #333333;
  position: relative;
  bottom: 20rpx;
}