.tabBox {
    width: 100vw;
    height: 100rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.navbar {
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    float: left;
    overflow-y: hidden;
    overflow-x: auto;
    white-space: nowrap;
    /* padding: 0 15rpx; */
}

.navbar__item {
    padding: 0 40rpx;
    font-size: 24rpx;
    text-align: center;
    position: relative;
    display: inline-block;
}

.navbar__item_on {
    padding: 0 40rpx;
    font-size: 24rpx;
    text-align: center;
    position: relative;
    display: inline-block;
    font-weight: bold;
    color: #e93928;
}

